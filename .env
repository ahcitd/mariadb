# MariaDB Configuration
MARIADB_VERSION=latest
MARIADB_CONTAINER_NAME=mariadb_server
MARIADB_PORT=3306

# Database Configuration
MYSQL_ROOT_PASSWORD=your_strong_root_password_here
MYSQL_DATABASE=my_database
