# --- Project Settings ---
PROJECT_NAME=my_project

# --- MariaDB Configuration ---
MARIADB_TAG=11.2              # เวอร์ชั่นของ MariaDB (หรือใช้ latest)
MARIADB_USER=app_user         # ชื่อผู้ใช้งานทั่วไป
MARIADB_PASSWORD=user_secure_pass  # รหัสผ่านผู้ใช้ทั่วไป
MARIADB_ROOT_PASSWORD=root_secure_pass # รหัสผ่าน Root (สำคัญมาก)
MARIADB_DATABASE=app_db       # ชื่อฐานข้อมูลเริ่มต้น
MARIADB_HOST_PORT=3306        # พอร์ตที่จะเปิดให้เข้าถึงจากภายนอก (Default: 3306)

# --- phpMyAdmin Configuration ---
PMA_TAG=latest                # เวอร์ชั่นของ phpMyAdmin
PMA_HOST_PORT=8080            # พอร์ตสำหรับเข้าหน้าเว็บ phpMyAdmin (เข้าผ่าน http://localhost:8080)
PMA_UPLOAD_LIMIT=64M          # เพิ่มขนาดไฟล์สำหรับ import database
